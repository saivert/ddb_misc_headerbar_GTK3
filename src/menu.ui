<?xml version="1.0" encoding="UTF-8"?>
<interface>
  <requires lib="gtk+" version="3.20"/>
  <menu id="file-menu">
    <section>
      <item>
        <attribute name="label">Open file(s)</attribute>
        <attribute name="action">db.open_files</attribute>
      </item>
    </section>
    <section>
      <attribute name="display-hint">vertical-buttons</attribute>
      <item>
        <attribute name="label">Add file(s)</attribute>
        <attribute name="action">db.add_files</attribute>
      </item>
      <item>
        <attribute name="label">Add folder(s)</attribute>
        <attribute name="action">db.add_folders</attribute>
      </item>
      <item>
        <attribute name="label">Add location</attribute>
        <attribute name="action">db.add_location</attribute>
      </item>
    </section>
    <section>
    <attribute name="display-hint">vertical-buttons</attribute>
      <item>
        <attribute name="label">New playlist</attribute>
        <attribute name="action">db.new_playlist</attribute>
      </item>
      <item>
        <attribute name="label">Load playlist</attribute>
        <attribute name="action">db.load_playlist</attribute>
      </item>
      <item>
        <attribute name="label">Save playlist</attribute>
        <attribute name="action">db.save_playlist</attribute>
      </item>
    </section>
  </menu>

  <menu id="playback-menu">
    <section>
      <attribute name="label">Shuffle</attribute>
      <item>
        <attribute name="label">Off</attribute>
        <attribute name="action">win.shufflemode</attribute>
        <attribute name="target">off</attribute>
      </item>
      <item>
        <attribute name="label">Tracks</attribute>
        <attribute name="action">win.shufflemode</attribute>
        <attribute name="target">tracks</attribute>
      </item>
      <item>
        <attribute name="label">Albums</attribute>
        <attribute name="action">win.shufflemode</attribute>
        <attribute name="target">albums</attribute>
      </item>
      <item>
        <attribute name="label">Random tracks</attribute>
        <attribute name="action">win.shufflemode</attribute>
        <attribute name="target">random</attribute>
      </item>
    </section>
    <section>
      <attribute name="label">Repeat</attribute>
      <item>
        <attribute name="label">All tracks</attribute>
        <attribute name="action">win.repeatmode</attribute>
        <attribute name="target">all</attribute>
      </item>
      <item>
        <attribute name="label">One track</attribute>
        <attribute name="action">win.repeatmode</attribute>
        <attribute name="target">single</attribute>
      </item>
      <item>
        <attribute name="label">Off</attribute>
        <attribute name="action">win.repeatmode</attribute>
        <attribute name="target">off</attribute>
      </item>
    </section>
    <section>
      <item>
        <attribute name="label">Scroll follows playback</attribute>
        <attribute name="action">win.scroll_follows_playback</attribute>
      </item>
      <item>
        <attribute name="label">Cursor follows playback</attribute>
        <attribute name="action">win.cursor_follows_playback</attribute>
      </item>
      <item>
        <attribute name="label">Stop after current track</attribute>
        <attribute name="action">win.stop_after_current</attribute>
      </item>
      <item>
        <attribute name="label">Stop after current album</attribute>
        <attribute name="action">win.stop_after_album</attribute>
      </item>
    </section>
  </menu>


</interface>